                                </m:headerToolbar> -->
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Degree Name" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="CGPA" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Institute Name" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Graduation Date" />
                                    </m:Column>
                                    
                                    <m:Column>
                                        <m:Text
                                            text="Actions"
                                            textAlign="End"
                                        />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{DEGREE_NAME}" />
                                            <m:Text text="{CGPA}" />
                                            <m:Text
                                                text="{INSTITUTION_NAME}"
                                            />
                                            <m:Text
                                                text="{GRADUATION_DATE}"
                                            />
                                            
                                            <m:HBox>
                                                <m:Button
                                                    icon="sap-icon://delete"
                                                    press="onDeleteDegree"
                                                    type="Reject"
                                                    class="sapUiTinyMargin"
                                                />
                                            </m:HBox>
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
