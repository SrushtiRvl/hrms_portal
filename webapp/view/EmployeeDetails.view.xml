            <ObjectPageSection
                titleUppercase="false"
                id="employmentSection"
                title="Employment"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="EducationSectionSS1"
                        title="Education Details"
                        titleUppercase="false"
                    >
                        <blocks>
                            <m:Table
                                items="{/EMP_DEGREES/results/}"
                                autoPopinMode="true"
                            >
                                <!-- <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:Title text="Employees" />
