                                <core:Title text="Contact Information" />
                                <m:HBox class="sapUiTinyMarginBottom">
                                    <core:Icon src="sap-icon://outgoing-call" />
                                    <m:Link
                                        text="{/EMP_MOBILE}"
                                        class="sapUiSmallMarginBegin"
                                    />
                                </m:HBox>

                                <m:HBox>
                                    <core:Icon src="sap-icon://email" />
                                    <m:Link
                                        text="{/EMP_EMAIL}"
                                        class="sapUiSmallMarginBegin"
                                    />
                                </m:HBox>
                            </form:SimpleForm>
                            <form:SimpleForm>
                                <m:ObjectStatus
                                    state="Success"
                                    icon="sap-icon://employee-approvals"
                                    text="Available"
                                />
                            </form:SimpleForm>
