                                <m:Label text="Reporting Manager" />
                                <m:Text text="{/REPORTING_MANAGER}" />
                            </form:SimpleForm>
                            <form:SimpleForm>
                                <core:Title text="Personal Details" />
                                <m:Label text="Date of Birth" />
