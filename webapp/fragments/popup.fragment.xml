<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
	<Popover
		id="myPopover"
		showHeader="false"
		contentWidth="320px"
		contentHeight="500px"
		placement="Bottom"
		ariaLabelledBy="master-title">
<Page
				id="master"
				class="sapUiResponsivePadding--header"
				title="Products">
				<List
					items="{Modules>/}" >
					<StandardListItem  title="{Modules>MODULE_CODE}" description="{Modules>MODULE_NAME}" iconInset="false" iconDensityAware="false"></StandardListItem>
				</List>
			</Page>
            </Popover>
</core:FragmentDefinition>